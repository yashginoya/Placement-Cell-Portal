    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                </button>
            </div>
            <div class="img bg-wrap text-center py-4">
                <div class="user-logo">
                    <div class="img" style="background-image: url(/images/admin.png);"></div>
                    <% if(isSuperAdmin) {%>
                        <h3>Placement Manager</h3>
                    <% } else {%>
                        <h3>Admin</h3>
                    <% }%>
                </div>
            </div>
            <ul class="list-unstyled components mb-5">
                
                <li>
                    <a href="/profile"><i class="fa fa-line-chart mr-3" aria-hidden="true"></i> Admin Statistics</a>
                </li>
                <li>
                    <a href="/updatePassword"><i class="fa fa-cloud-upload mr-3 " aria-hidden="true"></i> Update Password</a>
                  </li>
                <li>
                    <a href="/unverifiedstudents"><span class="fa fa-check mr-3 notif"></span> Verify Students</a>
                </li>
                <li>
                    <a href="/adminInterviewSchedule"><span class="fa fa-edit mr-3"></span> Schedule Jobs</a>
                </li>
                <li>
                    <a href="/unverifiedjobs"><span class="fa fa-briefcase mr-3"></span> Verify Jobs</a>
                </li>
                <% if(isSuperAdmin==true) {%>
                    <li>
                      <a href="/unverifiedcompany"><i class="fa fa-building-o mr-3" aria-hidden="true"></i> Verify Company</a>
                    </li>
                    <% } %>
                <li>
                    <a href="/adminStudents"><span class="fa-solid fa-list mr-3"></span> Student list</a>
                </li>
                <li class="active">
                    <a href="/adminJobs"><span class="fa-solid fa-list mr-3"></span> Job list</a>
                </li>
                <li>
                    <a href="/adminCompany"><span class="fa-solid fa-list mr-3"></span> Company list</a>
                </li>
                <li>
                    <a href="/datasheet"><span class="fa fa-download mr-3"></span> Datasheet</a>
                </li>
                <li>
                    <a href="/logout"><span class="fa fa-sign-out mr-3"></span> Logout</a>
                </li>
            </ul>

        </nav>



        <div id="content" style="margin-top: 15px;" class="p-4 p-md-5 pt-5">
            <div class="accordion" id="accordionExample">
                <% for(var i=0; i<jobs.length; i++){ %>
                    <div class="accordion-item">
                        <!-- <div class="header"> -->
                        <h2 class="accordion-header" id="heading<%= i + 1 %>">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                data-bs-target="#collapse<%= i + 1 %>" aria-expanded="false"
                                aria-controls="collapse<%= i + 1 %>">
                                <div style="font-weight:bold;" ,   class="header">
                                    <%= jobs[i].companyName %>
                                        :
                                        <%= jobs[i].jobName%>
                                </div>
                            </button>
                        </h2>
                        <!-- </div> -->
                        <div id="collapse<%= i + 1 %>" class="accordion-collapse collapse"
                            aria-labelledby="heading<%= i + 1 %>" data-bs-parent="#accordionExample">
                            <div class="accordion-body">

                                <table class="table table-hover">
                                    <tr>
                                        <td>Posting Location</td>
                                        <td>:</td>
                                        <td>
                                            <%= jobs[i].postingLocation %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td> Open For </td>
                                        <td>:</td>
                                        <td>
                                            <%= jobs[i].ugCriteria %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>CPI Criteria</td>
                                            <td>:</td>
                                            <td>
                                                <%= jobs[i].cpiCriteria %>
                                            </td>
                                    </tr>
                                    <tr>
                                        <td> CTC (LPA) </td>
                                        <td>:</td>
                                        <td>
                                            <%= jobs[i].ctc %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td> Description </td>
                                        <td>:</td>
                                        <td>
                                            <%= jobs[i].description %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td> Start Date </td>
                                        <td>:</td>
                                        <td>
                                            <%= jobs[i].startDate %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>End Date</td>
                                        <td>:</td>
                                        <td>
                                            <%= jobs[i].endDate %>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>Verified ?</td>
                                        <td>:</td>
                                        <td>
                                            <% if(jobs[i].isVerified==true){ %>
                                                YES
                                                <% } else { %>
                                                    NO
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Rejected ?</td>
                                        <td>:</td>
                                        <td>
                                            <% if(jobs[i].isRejected==true){ %>
                                                YES
                                                <% } else { %>
                                                    NO
                                                    <% } %>
                                        </td>
                                    </tr>



                                </table>

                            </div>
                        </div>
                    </div>
                    <% } %>


            </div>
        </div>
    </div>

    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>

